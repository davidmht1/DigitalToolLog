<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DigitalToolLog.Views.ToolboxView"
             xmlns:local="clr-namespace:DigitalToolLog.Views"
             xmlns:model="clr-namespace:DigitalToolLog.Models"
             xmlns:vm="clr-namespace:DigitalToolLog.ViewModel"
             x:DataType="vm:ToolboxEntry"
             Title="Tool Inventory">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Entry Placeholder="Enter Toolbox Name"
               Text="{Binding Toolbox.Name}"
               FontSize="20"
               Grid.Column="1"
               Grid.ColumnSpan="2"/>
        <Entry Placeholder="Enter Identifier"
               Text="{Binding Toolbox.Identifier}"
               FontSize="20"
               Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="2"/>
        <ListView ItemsSource="{Binding Message}"
                  Grid.Row="2"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"/>
        <Button Text="Save Toolbox"
                Command="{Binding SaveToolboxCommand}"
                Grid.Row="3"
                MaximumWidthRequest="200"
                Grid.Column="1"
                Grid.ColumnSpan="2"/>
        <CollectionView x:Name="EmployeeList"
                        ItemsSource="{Binding SetModel.ToolboxList}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SetModel.SelectedToolBox,Mode=TwoWay}"
                        Grid.Row="4"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
            <FlyoutBase.ContextFlyout>
                <MenuFlyout x:Name="FlyOut">
                    <MenuFlyoutItem Text="Edit Tool"
                                    Clicked="Edit"
                                    IconImageSource="edit.png"/>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="Delete Tool"
                                    IconImageSource="delete.png"
                                    Command="{Binding DeleteToolboxCommand}"/>
                </MenuFlyout>
            </FlyoutBase.ContextFlyout>
            <CollectionView.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Name"
                           FontSize="Small"
                           Padding="20"
                           HorizontalOptions="Center"/>
                    <Label Text="Identifier"
                           FontSize="Small"
                           Padding="20"
                           HorizontalOptions="Center"
                           Grid.Column="1"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Toolbox">
                    <Grid Style="{StaticResource SelectGrid}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Name}"
                               FontSize="Medium"
                               TextTransform="Uppercase"
                               HorizontalOptions="Center"
                               Grid.Column="0"/>
                        <Label Text="{Binding Identifier}" 
                               FontSize="Medium"
                               HorizontalOptions="Center"
                               Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>